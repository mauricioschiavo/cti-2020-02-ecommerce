@model List<DAL.Product>
@{
    ViewData["Title"] = "Index";
}

<h1>Listando Produtos (@Model.Count)</h1>

<div class="row">
    @foreach (var product in Model)
    {
        <div class="col-3 mb-3">
            <a class="card d-block" href="@Url.Action("Detail", "Product", new { Id = product.Id })">
                <span class="card-body d-block">
                    <img src="@product.Image" />
                    @product.Name
                </span>
            </a>
        </div>
    }
</div>


